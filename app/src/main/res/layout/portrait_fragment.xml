<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/portrait_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Simple Calculator - Portrait"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <fragment
        android:id="@+id/panel_left_frag"
        android:name="edu.wmich.cs.johnharvey.hw2calculator.operation_button_frag"
        android:layout_width="172dp"
        android:layout_height="436dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/portrait_frag"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        class="edu.wmich.cs.johnharvey.hw2calculator.operation_button_frag"
        app:layout_constraintVertical_bias="0.428"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <fragment
        android:id="@+id/panel_right_frag"
        android:name="edu.wmich.cs.johnharvey.hw2calculator.input_output_frag"
        android:layout_width="172dp"
        android:layout_height="436dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/panel_left_frag"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portrait_frag"
        class="edu.wmich.cs.johnharvey.hw2calculator.input_output_frag"/>


</android.support.constraint.ConstraintLayout>
